@model POS.Web.UI.ViewModels.ProductViewModel

@{
    ViewBag.Title = "Details";
}

@Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default" })

<h2>@Model.Name</h2>

<hr />

<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-2"><strong>Code</strong></div>
            <div class="col-md-10">@Model.Code</div>
        </div>
        <div class="row">
            <div class="col-md-2"><strong>Released</strong></div>
            <div class="col-md-10">@Model.ReleaseDate</div>
        </div>
        <div class="row">
            <div class="col-md-2"><strong>Price</strong></div>
            <div class="col-md-10">@Model.Price</div>
        </div>
        <div class="row">
            <div class="col-md-2"><strong>Description</strong></div>
            <div class="col-md-10">@Model.Description</div>
        </div>
    </div>
    <div class="col-md-6">
        <img height="500" width="500" src="@Model.ImageUrl" alt="@Model.Name" />
    </div>
</div>

