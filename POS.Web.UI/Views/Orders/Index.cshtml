@model IEnumerable<POS.Web.UI.ViewModels.OrderViewModel>
@{
    ViewBag.Title = "Order List";
}

<div class="row"></div>
<div class="row">
    <div class="col-md-10">
        <h3>Order List</h3>
    </div>
    <div class="col-md-2">
        @Html.ActionLink("New Order", "Create", "Orders", null, new { @class = "btn btn-success"})
    </div>
</div>

@if (Model.Count() == 0 || Model == null)
{
    <p>No Orders</p>
}
else
{
    <table id="Orders" class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
            <td>@p.OrderDate.ToString("MMM-yyyy")</td>
        </tr>
        }
    </tbody>
</table>   
}
