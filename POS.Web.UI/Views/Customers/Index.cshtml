@model IEnumerable<POS.Web.UI.ViewModels.CustomerViewModel>
@{
    ViewBag.Title = "Customer List";
}


<div class="row"></div>
<div class="row">
    <div class="col-md-10">
        <h3>Customer List</h3>
    </div>
    <div class="col-md-2">
        @Html.ActionLink("New Customer", "Create", "Customers", null, new { @class = "btn btn-success"})
    </div>
</div>

@if (Model.Count() == 0)
{
    <p>No Customers</p>
}
else
{
    <table id="customers" class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
            <td>@Html.ActionLink(p.FullName, "Details", "Customers", new { id = p.Id }, null)</td>
            <td>@Html.ActionLink("Modify", "Edit", "Customers", new { id = p.Id }, new { @class = "btn btn-primary" })</td>
            <td><button class="btn btn-danger js-delete" data-product-id="@p.Id">Delete</button></td>
        </tr>
        }
    </tbody>
   </table>
}
